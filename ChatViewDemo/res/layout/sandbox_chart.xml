<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/sandbox_chart_line"
            android:layout_width="@dimen/chart_button_size"
            android:layout_height="@dimen/chart_button_size"
            android:background="@android:color/transparent"
            android:onClick="onMenuClick"
            android:src="@drawable/cow_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/sandbox_chart_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@android:color/transparent"
            android:onClick="onMenuClick"
            android:src="@drawable/duck_btn" />

        <ImageButton
            android:id="@+id/sandbox_chart_horbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/sandbox_chart_bar"
            android:layout_toRightOf="@+id/sandbox_chart_bar"
            android:background="@android:color/transparent"
            android:onClick="onMenuClick"
            android:rotation="90"
            android:src="@drawable/duck_btn" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/sandbox_chart_stacked"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@android:color/transparent"
            android:onClick="onMenuClick"
            android:src="@drawable/pig_btn" />

        <ImageButton
            android:id="@+id/sandbox_chart_horstacked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toEndOf="@+id/sandbox_chart_stacked"
            android:layout_toRightOf="@+id/sandbox_chart_stacked"
            android:background="@android:color/transparent"
            android:onClick="onMenuClick"
            android:rotation="90"
            android:src="@drawable/pig_btn" />
    </RelativeLayout>

</LinearLayout>